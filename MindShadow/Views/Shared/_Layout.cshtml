                    else
                    {

                        <li>@Html.ActionLink("Login", "Login", "User", new { area = "" }, new { @class = "nav-link fw-bold list-group-item logBtn", @Id="logBtn" })</li>
                        <li>@Html.ActionLink("BMI Calculator", "BMI", "Home", new { area = "" }, new { @class = "fw-bold list-group-item logBtn" })</li>
                    }


                </ul>
            </div>
        </div>
