                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "fw-bold me-3 list-group-item" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "User", new { area = "" }, new { @class = "fw-bold me-3 list-group-item" })</li>
                    <li>@Html.ActionLink("Mission & Vision", "MissionVision", "Home", new { area = "" }, new { @class = "fw-bold me-3 list-group-item" })</li> 
                    <li>@Html.ActionLink("Blogs", "Blogs", "Home", new { area = "" }, new { @class = "fw-bold me-3 list-group-item" })</li>
                </ul>
            </div>
