                            <li class="drop-1">@Html.ActionLink("Self Registration", "SelfRegistration", "User", new { area = "" }, new { @class = "text-black text-start fs-6 fw-semibold fst-italic text-decoration-none  " })</li>
                            <li class="drop-1">@Html.ActionLink("Doctor's Registration", "DrRegistration", "User", new { area = "" }, new { @class = "text-black fs-6 fw-semibold fst-italic text-decoration-none" })</li>
                            <li class="drop-1">@Html.ActionLink("Gardians registration", "GardianRegistration", "User", new { area = "" }, new { @class = "text-black fs-6 fw-semibold fst-italic text-decoration-none " })</li>
                            <li class="drop-1 ">@Html.ActionLink("Clinic Registration", "ClinicRegistration", "User", new { area = "" }, new { @class = "text-black fs-6 fw-semibold fst-italic text-decoration-none " })</li>
                            <li class="drop-1">@Html.ActionLink("Diagnostic Registration", "DiagonostRegistration", "User", new { area = "" }, new { @class = "text-black fs-6 fw-semibold fst-italic text-decoration-none " })</li>

                        </ul>

                        <script src="~/Content/Javascript/DropDown.js"></script>
                    </li>
                    @if (Session["userLogin"] != null)
                    {
                        @Html.ActionLink("Dashboard", "Dashboard", "User", new { area = "" }, new { @class = "nav-link fw-bold list-group-item " })
