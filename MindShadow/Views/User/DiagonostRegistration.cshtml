                        @Html.ValidationMessageFor(model => model.Marks_upload, "", new { @class = "text-danger" })

                        @*@Html.EditorFor(model => model.Marks_upload1, new { htmlAttributes = new { @class = "form-control multiple", @Type = "file" } })
                        @Html.ValidationMessageFor(model => model.Marks_upload1, "", new { @class = "text-danger"  })*@
