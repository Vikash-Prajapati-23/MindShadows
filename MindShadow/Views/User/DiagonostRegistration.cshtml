                        @Html.ValidationMessageFor(model => model.C_12th_marks_obtain, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-3">
                    <lable>Upload Marksheets<span style="color:red;">*</span></lable>
